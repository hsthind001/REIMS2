# =============================================================================
# REIMS Backend Environment Configuration
# =============================================================================
# Copy to .env and fill in values. In production, ALL required vars must be set.
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(64))"
# =============================================================================

# Environment (development | staging | production)
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Required for production/staging (fail-fast if missing)
# -----------------------------------------------------------------------------
# SECRET_KEY must be 32+ chars. Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=

# Database (PostgreSQL)
POSTGRES_USER=reims
POSTGRES_PASSWORD=reims
POSTGRES_SERVER=localhost
POSTGRES_PORT=5433
POSTGRES_DB=reims

# MinIO / S3-compatible storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=reims
MINIO_SECURE=false

# Redis (used by Celery broker and cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Optional (session, JWT)
# -----------------------------------------------------------------------------
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# SESSION_HTTPS_ONLY=false
# SESSION_SAME_SITE=lax
# SESSION_MAX_AGE_SECONDS=86400
